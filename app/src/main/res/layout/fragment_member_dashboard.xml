<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Sessions.Members.pages.Dashboard.DashboardDesk.DashboardFragment">


    <com.google.android.material.tabs.TabLayout
            android:id="@+id/member_dashboard_tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
                android:id="@+id/member_dashboard_tablayout_session"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Session"/>

        <com.google.android.material.tabs.TabItem
                android:id="@+id/member_dashboard_tablayout_reservations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book a Reservation"/>

        <com.google.android.material.tabs.TabItem
                android:id="@+id/member_dashboard_tablayout_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"/>
    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/member_dashboard_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/member_dashboard_tablayout"/>
</RelativeLayout>